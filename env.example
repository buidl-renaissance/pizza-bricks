# Database Configuration
# For local development, set USE_LOCAL=true to use SQLite file
USE_LOCAL=true

# For production with Turso
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Pizza Bricks Landing
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/your-invite

# Supabase (waitlist / landing signups)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# --- Outreach System ---

# Facebook Graph API (business discovery)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google Places API (New) — business discovery
GOOGLE_PLACES_API_KEY=your-places-api-key

# Serper.dev — Google search for FB page + email discovery
SERPER_API_KEY=your-serper-api-key

# Gemini API — email drafting
GEMINI_API_KEY=your-gemini-api-key

# Gmail API — sending outreach emails (OAuth 2.0)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_SENDER_ADDRESS=you@gmail.com

# Default search location for vendor discovery
OUTREACH_DEFAULT_LOCATION=Denver, CO
